<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%cyan(%d{HH:mm:ss.SSS}) | %green(%-40logger{35}) | %magenta(%-4L) | %highlight(%-5level) | %X{ep-label} | %X{ep-uid} - %boldWhite(%m) %ex %n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
